<!DOCTYPE module SYSTEM "module.dtd">

<module name="competition">
  <doc>
    <description>Competition Module Group 3</description>
  </doc>

  <settings>
    <dl_settings>
      <dl_settings NAME="ColorFilter">
        <dl_setting var="cf_ymin" min="0" step="1" max="255" shortname="y_min" />
        <dl_setting var="cf_ymax" min="0" step="1" max="255" shortname="y_max" />
        <dl_setting var="cf_umin" min="0" step="1" max="255" shortname="u_min" />
        <dl_setting var="cf_umax" min="0" step="1" max="255" shortname="u_max" />
        <dl_setting var="cf_vmin" min="0" step="1" max="255" shortname="v_min" />
        <dl_setting var="cf_vmax" min="0" step="1" max="255" shortname="v_max" />
      </dl_settings>
    </dl_settings>
  </settings>

  <depends>opticflow</depends>
  <header>
    <file name="competition_main.h" />
  </header>
  <init fun="competition_init()" />
  <periodic fun="competition_loop()" freq="30" />
  <makefile target="ap|nps">
    <flag name="CXXFLAGS" value="std=c++17" />
    <file name="competition_main_cxx.cpp" />
    <file name="competition_main.c" />
  </makefile>
  <makefile target="ap">
    <raw>
      ap.CFLAGS += -DBOARD_CONFIG=\"boards/bebop.h\"
    </raw>
  </makefile>
</module>